deploy-setup-%:
	@	DEPLOYENV=$* \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/setup.sh

release:
	@	DEPLOYMENT_FOLDER=$(DEPLOYMENT_FOLDER)  \
		DEPLOY_SCRIPTS_FOLDER=$(DEPLOY_SCRIPTS_FOLDER) \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/release.sh

deploy-patch-%:
	@	make build
	@	DEPLOYENV=$* \
		COPY_DEST=$(COPY_DEST) \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/deploy-patch.sh

deploy-%:
	@	make build
	@	DEPLOYENV=$* \
		DEPLOYMENT_FOLDER=$(DEPLOYMENT_FOLDER) \
		DEPLOY_SCRIPTS_FOLDER=$(DEPLOY_SCRIPTS_FOLDER) \
		COPY_DEST=$(COPY_DEST) \
		WEBROOT_PATH=$(WEBROOT_PATH) \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/deploy.sh

rollback-%:
	@	DEPLOYENV=$* \
		DEPLOYMENT_FOLDER=$(DEPLOYMENT_FOLDER) \
		DEPLOY_SCRIPTS_FOLDER=$(DEPLOY_SCRIPTS_FOLDER) \
		COPY_DEST=$(COPY_DEST) \
		WEBROOT_PATH=$(WEBROOT_PATH) \
		CONFIG_FOLDER=./.config \
		 $(DEPLOY_SCRIPTS_FOLDER)/rollback.sh


clean-%:
	@	DEPLOYENV=$* \
		WEBROOT_PATH=$(WEBROOT_PATH) \
        CONFIG_FOLDER=./.config \
		 $(DEPLOY_SCRIPTS_FOLDER)/clean.sh

push-data-%:
	@	DEPLOYENV=$* \
		WEBROOT_PATH=$(WEBROOT_PATH) \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/push-data.sh

pull-data-%:
	@	DEPLOYENV=$* \
		DEPLOY_SCRIPTS_FOLDER=$(DEPLOY_SCRIPTS_FOLDER) \
		WEBROOT_PATH=$(WEBROOT_PATH) \
		CONFIG_FOLDER=$(CONFIG_FOLDER) \
		 $(DEPLOY_SCRIPTS_FOLDER)/pull-data.sh