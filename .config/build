# What kind of project is it? Can be default, craft, laravel
RECIPE=default

# Should the database get migrated? Currently only used for laravel projects
MIGRATE_DB=1

# Name of the config folder where this file is
CONFIG_FOLDER=./.config

# Name of the folder where the scripts are
SCRIPTS_FOLDER=./.scripts
RECIPES_FOLDER=./.scripts/recipes

# Main Entry Points
BE_SOURCE=backend
FE_SOURCE=frontend

# FE stuff
NODE_MODULES=./node_modules

WEBPACK_CONFIG=${CONFIG_FOLDER}/webpack.config.js

# Binaries
WEBPACK=${NODE_MODULES}/.bin/webpack
SVGO=${NODE_MODULES}/.bin/svgo

ASSETS_PATH=${FE_SOURCE}/_public/assets

# Icons
ICONS_IN=${FE_SOURCE}/icons/icons
ICONS_OUT=${FE_SOURCE}/_public/generated/img/icons
ICONS_COMBINED_SVG=${FE_SOURCE}/_public/generated/icons.svg

# Favicons
FAVICONS_IN=${FE_SOURCE}/icons/favicons
